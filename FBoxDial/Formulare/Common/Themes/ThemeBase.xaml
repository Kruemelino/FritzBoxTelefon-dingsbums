<ResourceDictionary x:Class="ThemeBase" 
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Resources/Converter.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <!--#region Colors & Brushes-->

    <Color x:Key="Shadow">#71000000</Color>
    <Color x:Key="LightSilver">#FFE7EAEA</Color>
    <Color x:Key="Iceberg">#FF73A9D8</Color>
    <Color x:Key="Calypso">#FF436b8d</Color>
     
    <!--#region Default Brushes-->
    <SolidColorBrush x:Key="ChineseBlack"               Color="#FF131313" />
    <SolidColorBrush x:Key="RaisinBlack"                Color="#FF212121" />
    <SolidColorBrush x:Key="DarkCharcoal"               Color="#FF333333"/>  
    <SolidColorBrush x:Key="DarkShadow"                 Color="#60000000"/>  
    <SolidColorBrush x:Key="Mystic"                     Color="#11E5EBF1"/>    
    <SolidColorBrush x:Key="BleuDeFrance"               Color="#FF2D98DA"/>
    <SolidColorBrush x:Key="BatteryChargedBlue"         Color="#FF26A0DA"/>    
    <SolidColorBrush x:Key="BatteryChargedBlueShadow"   Color="#3D26A0DA"/>
    <SolidColorBrush x:Key="CrayolasGreen"              Color="#FF20BF6B"/>
    <SolidColorBrush x:Key="Carmine"                    Color="#FF940A14"/>
    <SolidColorBrush x:Key="PigmentRed"                 Color="#FFF01428"/>
    <SolidColorBrush x:Key="FieryRose"                  Color="#FFFC5C65"/>
    
      <SolidColorBrush x:Key="DavysGrey"                  Color="#FF595959"/>
    <SolidColorBrush x:Key="SpiroDiscoBall"             Color="#FF27C7F7"/>
    <SolidColorBrush x:Key="Water"                      Color="#FFCCEEFB"/> 
