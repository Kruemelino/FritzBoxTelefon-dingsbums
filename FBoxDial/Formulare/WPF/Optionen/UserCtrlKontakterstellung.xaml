<UserControl x:Class="UserCtrlKontakterstellung"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:fbd="clr-namespace:FBoxDial"
            mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="400"
            d:DataContext="{d:DesignInstance Type=fbd:Optionen, IsDesignTimeCreatable=True}">

    <StackPanel x:Name="MainStackPanel" Margin="8">

        <fbd:OptionsÜberschrift Label="Einstellungen für die Kontakterstellung"/>
        <fbd:OptionsHinweis Label="Hinweise zur Kontakterstellung:&#10;Sofern Kontakte automatisch erstellt werden sollen, muss hier festgelegt werden, in welchem Ordner die Kontakte gespeichert werden sollen.&#10;Wird kein Ordner gewählt, wird der Outlook-Standardverwendet."/>
        <fbd:OptionsCheckBox Label="Kontakte automatisch erstellen" Value="{Binding CBKErstellen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <fbd:OptionsOLFolderTV x:Name="OLFolderKontaktsErstellung" OutlookOlItemType="olContactItem" ÜberwachteOrdnerListe="{Binding OutlookOrdner, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Verwendung="KontaktSpeichern"/>


    </StackPanel>


</UserControl>
