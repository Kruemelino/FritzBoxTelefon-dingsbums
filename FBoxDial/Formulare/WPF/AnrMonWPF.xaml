                                            </DrawingGroup>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Viewbox>
                    </StackPanel.Resources>

                    <Button x:Name="BReCall" Margin="0,4,0,0" VerticalAlignment="Top" Height="15" HorizontalAlignment="Right" Width="15" IsCancel="True" Content="{DynamicResource CallTo_12x}" Click="BReCall_Click"/>
                    <Button x:Name="BContact" Margin="0,4,0,0" VerticalAlignment="Top" Height="15" HorizontalAlignment="Right" Width="15" IsCancel="True" Content="{DynamicResource ContactCard_12x}" Click="BContact_Click"/>
                    <Button x:Name="BCopy" Margin="0,4,0,0" VerticalAlignment="Top" Height="15" HorizontalAlignment="Right" Width="15" IsCancel="True" Content="{DynamicResource Copy_12x}" Click="BCopy_Click"/>

                </StackPanel>
            </Popup>
        </Grid>
    </Border>
</Window>